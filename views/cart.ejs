<% if(products) { %>
    <div class="row">
            <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
                <ul class="list-group">
                    <% products.forEach(function(item) { %>
                    <li class="list-group-item">
                        <span class="badge float-right"><%= item.qty %></span>
                        <strong><%= item.item.titleProduct %></strong>
                        <span class="label label-success">$ <%= item.price %></span>
                        <div class="btn-group">
                            <button class="btn btn-primary btn-xs dropdown-toggle" type="button">Action <span class="caret"></span></button>
                            <ul class="dropdown-menu">
                                <li><a href="#">Reduce by 1</a></li>
                                <li><a href="#">Remove</a></li>
                            </ul>
                        </div>
                    </li>
                    <% }); %>
                </ul>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
                <strong>Total: <%= totalPrice %></strong>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
                <button type="button" class="btn btn-success">Checkout</button>
            </div>
        </div>
<% } else { %>
    <div class="row">
            <div class="col-sm-6 col-md-6 offset-md-3 offset-sm-3">
                <h2>No items in Cart</h2>
            </div>
        </div>
<% } %>

