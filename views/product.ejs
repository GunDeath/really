<div class="container">
    <% for(let i = 0; i < products.length; i++) { %>
    <div class="row">
        <div class="col-sm-12 col-md-12 blocked">
            <div class="thumbnail ">
                <div class="text-center">
                    <img src= '<%- products[i].imagePath %>' class="img-rounded" alt="...">
                </div>
                <div class="caption">
                    <h3 class="text-center "><%= products[i].titleProduct %></h3>
                    <p class="description"><%= products[i].descriptionProduct %></p>
                    <div class="mb-2">
                        <div class="price float-left"> $ <%= products[i].price %></div>
                        <a href="/add_to_cart/<%- products[i]._id %>" class="btn btn-success float-right" role="button">Add to cart</a>
                        <a href="/add_group_cart/<%- products[i]._id %>" class="btn btn-success float-right" role="button">Add to group cart</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
    <% } %>
</div>

